<%= form_with(model: @post, local: true, html: { multipart: true, class: "form-horizontal" }) do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "control-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :author, class: "control-label" %>
    <%= form.text_field :author, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :content, class: "control-label" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :status, class: "control-label" %>
    <%= form.select :status, options_for_select([['Draft', 'draft'], ['Published', 'published']]), {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :published_date, class: "control-label" %>
    <%= form.datetime_select :published_date, {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :image, class: "control-label" %>
    <%= form.file_field :image, class: "form-control-file" %>
  </div>
  <div class="form-group">
    <%= form.label :video, class: "control-label" %>
    <%= form.file_field :video, class: "form-control-file" %>
  </div>
  <div class="form-group">
    <%= form.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>
